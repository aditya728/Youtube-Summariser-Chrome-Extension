{
    "manifest_version":3,
    "name": "Recapify",
    "description": "Your Ultimate Video Summarizing Companion!",
    "version": "1.0",
    "permissions": ["activeTab", "declarativeContent", "webRequest", "webNavigation"],
    "author": "Aditya & Sanika",
    "host_permissions":["http://127.0.0.1:5000/*"],


    "action":{
        "default_title":"Your Ultimate Video Summarizing Companion!",
        "default_icon":{
            "16":"images/icon.png",
            "32":"images/icon.png",
            "48":"images/icon.png",
            "128":"images/icon.png"
        },     
        "default_popup":"popup.html"
    },

    "icons":{
        "16":"images/icon.png",
        "32":"images/icon.png",
        "48":"images/icon.png",
        "128":"images/icon.png"
    }    
}